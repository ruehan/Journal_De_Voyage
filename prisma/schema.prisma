// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  name      String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
model Pin {
  id        Int      @id @default(autoincrement())
  email     String
  title     String
  content   String?
  latitude  Float
  longitude Float
  image     String?
  video     String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

